# Pathway Property MVP - Environment Variables
# Copy this to backend/.env.local and frontend/.env.local

# === PROPERTY DATA APIs ===
# CoreLogic Property API - OAuth 2.0 credentials
# Get credentials from CoreLogic developer portal
CORELOGIC_CLIENT_ID=
CORELOGIC_CLIENT_SECRET=
# Set to true for sandbox (default), false for production
CORELOGIC_USE_SANDBOX=true
# Optional: Override base URL entirely (otherwise auto-detected from USE_SANDBOX)
# Sandbox: https://property-sandbox-api.corelogic.asia
# Production: https://property-api.corelogic.asia
# CORELOGIC_BASE_URL=

GEOSCAPE_CONSUMER_KEY=
GEOSCAPE_CONSUMER_SECRET=
GEOSCAPE_BASE_URL=https://api.geoscape.com.au

# === AI SERVICES ===
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=
AZURE_DOCUMENT_INTELLIGENCE_KEY=

# OpenAI for LLM reasoning and embeddings (REQUIRED)
OPENAI_API_KEY=

# === VECTOR DB ===
# Local development uses Chroma
VECTOR_DB=chroma
CHROMA_PERSIST_DIR=./chroma_data

# Production uses Pinecone (uncomment when ready)
# VECTOR_DB=pinecone
# PINECONE_API_KEY=
# PINECONE_INDEX_NAME=pathway-properties

# === MAPS ===
NEXT_PUBLIC_MAPBOX_TOKEN=

# === DOMAIN API (Property Listings) ===
# OAuth 2.0 credentials from developer.domain.com.au
DOMAIN_CLIENT_ID=
DOMAIN_CLIENT_SECRET=
DOMAIN_BASE_URL=https://api.domain.com.au

# === HERITAGE VICTORIA ===
# Public API - no key required
HERITAGE_VIC_BASE_URL=https://vhd.heritagecouncil.vic.gov.au

# === CRIME STATISTICS AGENCY VIC ===
# Public data - no key required
CSA_VIC_BASE_URL=https://www.crimestatistics.vic.gov.au

# === NBN CO ===
# Public rollout check - no key required
NBN_BASE_URL=https://places.nbnco.net.au

# === EPA VICTORIA ===
# Priority Sites Register - no key required
EPA_VIC_BASE_URL=https://portal.epa.vic.gov.au

# === GEOVIC (Mining Tenements) ===
# Public WFS - no key required
GEOVIC_WFS_URL=https://geology.data.vic.gov.au/geoserver/wfs

# === PTV (Public Transport Victoria) ===
# Register at ptv.vic.gov.au/footer/data-and-reporting/datasets/ptv-timetable-api/
PTV_DEVELOPER_ID=
PTV_API_KEY=
PTV_BASE_URL=https://timetableapi.ptv.vic.gov.au

# === VICPLAN (Planning Scheme) ===
# Public WFS - no key required
VICPLAN_WFS_URL=https://opendata.maps.vic.gov.au/geoserver/wfs

# === SERVICE TOGGLES ===
# Set to False to use live APIs (requires credentials)
USE_MOCK_DOMAIN=True
USE_MOCK_HERITAGE=True
USE_MOCK_CRIME=True
USE_MOCK_NBN=True
USE_MOCK_EPA=True
USE_MOCK_MINING=True
USE_MOCK_SCHOOLS=True
USE_MOCK_TRANSPORT=True
USE_MOCK_DEMOGRAPHICS=True

# === LOCAL CONFIG ===
DATABASE_URL=sqlite:///./pathway.db
UPLOAD_DIR=./uploads
CACHE_DIR=./cache

# === APP CONFIG ===
BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

